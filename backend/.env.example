# NASA BloomWatch Backend Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=5000

# BloomWatch Backend Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///bloomwatch.db

# Google Earth Engine Configuration
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# API Configuration
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=30      # seconds

# Logging Configuration
LOG_LEVEL=INFO

# Earth Engine Settings
EE_INITIALIZATION_TIMEOUT=30  # seconds
EE_MAX_RETRIES=3

# NASA EarthData Credentials (optional, for additional data sources)
NASA_EARTHDATA_USERNAME=your-earthdata-username
NASA_EARTHDATA_PASSWORD=your-earthdata-password

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bloomwatch.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cache Configuration
CACHE_TIMEOUT_SECONDS=3600
ENABLE_CACHING=true

# Background Task Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
